<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <title>登录</title>
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="loginBody">
    <div class="container loginContainer">
        <form action="/user/login" method="POST" class="loginForm">
            <div class="item_b">
                <label for="" class="">账号</label>
                <input id="email" type="text" class="" name="account" placeholder="账号">
            </div>
            <div class="item_b">
                <label for="" class="">密码</label>
                <% if (msg) { %>
                <span class="msg"><%= msg %></span>
                <% } %>
                <input id="password" type="password" class="" name="password" placeholder="密码">
            </div>
            <div class="item_s">
                <label for="" class="vHide">登录</label>
                <button id="login" type="submit" class="loginBtn">登录</button>
            </div>
        </form>
    </div>
</body>
</html>

